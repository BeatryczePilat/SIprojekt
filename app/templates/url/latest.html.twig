{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="mb-4">{{ 'latest.title'|trans }}</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'latest.original_url'|trans }}</th>
            <th>{{ 'latest.short_code'|trans }}</th>
            <th>{{ 'latest.created_at'|trans }}</th>
            <th>{{ 'latest.clicks'|trans }}</th>
            <th>{{ 'latest.tag'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for url in pagination %}
            <tr>
                <td>{{ url.originalUrl }}</td>
                <td><code>{{ url.shortCode }}</code></td>
                <td>{{ url.createdAt|date('Y-m-d H:i') }}</td>
                <td>{{ url.clicks }}</td>
                <td>
                    {% if url.tag %}
                        <span class="badge bg-secondary">{{ url.tag.name }}</span>
                    {% else %}
                        <span class="text-muted">{{ 'latest.no_tag'|trans }}</span>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'latest.no_data'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
