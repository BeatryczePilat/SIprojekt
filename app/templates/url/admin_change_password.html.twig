{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.login_data.title'|trans }}{% endblock %}

{% block body %}
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="mb-4 text-dark fw-bold text-center">{{ 'admin.login_data.title'|trans }}</h3>

                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.currentPassword, 'admin.login_data.current_password'|trans, {'label_attr': {'class': 'form-label text-dark'}}) }}
                        {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.currentPassword) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.newPassword, 'admin.login_data.new_password'|trans, {'label_attr': {'class': 'form-label text-dark'}}) }}
                        {{ form_widget(form.newPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.newPassword) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.email, 'admin.login_data.email'|trans, {'label_attr': {'class': 'form-label text-dark'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="d-grid">
                        <button class="btn btn-primary" type="submit">{{ 'admin.login_data.submit'|trans }}</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
