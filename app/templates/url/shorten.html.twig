{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <h1 class="text-center mb-4">{{ 'shorten.title'|trans }}</h1>

                {% if shortUrl is defined %}
                    <div class="alert alert-success text-center">
                        {{ 'shorten.success'|trans }} <a href="{{ shortUrl }}" target="_blank">{{ shortUrl }}</a>
                    </div>
                {% endif %}

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success text-center">{{ message }}</div>
                {% endfor %}

                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_label(form.originalUrl, 'shorten.label.original_url'|trans, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.originalUrl, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.originalUrl) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.email, 'shorten.label.email'|trans, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.tag, 'shorten.label.tag'|trans) }}
                            {{ form_widget(form.tag, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.tag) }}

                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary">{{ 'shorten.button'|trans }}</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
