{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">{{ 'edit_url.title'|trans }}</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.originalUrl, 'edit_url.original_url'|trans, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.originalUrl, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.email, 'edit_url.email'|trans, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.tags, 'edit_url.tags'|trans, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.tags, {'attr': {'class': 'form-select', 'multiple': true, 'size': 4}}) }}
                </div>

                <button class="btn btn-success">{{ 'edit_url.save_button'|trans }}</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
