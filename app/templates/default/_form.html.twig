{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title|trans }}
{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="display-5 text-primary mb-4">{{ page_title|trans }}</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        {% if false == form.vars.valid %}
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'danger',
                message: 'message.form_error'|trans,
            } %}
        {% endif %}

        <div class="card shadow-sm">
            <div class="card-body">
                {{ form_widget(form) }}
            </div>
            <div class="card-footer bg-light d-flex justify-content-between">
                <div>
                    {% if back_to_list_path|default(false) %}
                        <a href="{{ url(back_to_list_path) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> {{ 'action.back_to_list'|trans }}
                        </a>
                    {% endif %}
                </div>
                <div>
                    <input type="submit" value="{{ submit_label|trans }}" class="btn btn-primary" />
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
